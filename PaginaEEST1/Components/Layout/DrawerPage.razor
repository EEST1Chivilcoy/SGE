@inject NavigationManager NavigationManager
@inject IConfiguration Configuration
@using AntDesign

<header>
    <nav style="padding: 30px;">
        <Flex Align="center" Justify="space-between" Style="margin: 10px; max-height: 250px; width: 100%">
            <div class="logo">
                <a href="/">
                    <img src="Images/School_Logo.png" alt="Logo Escuela" />
                </a>
            </div>
            <div class="btn-drawer">
                <Button type="default" Style="color: #A2C1DD;" OnClick="() => _Visible = true">
                    <Icon type="menu" />
                </Button>
            </div>
        </Flex>
    </nav>
</Header>
<Drawer @bind-Visible="_Visible" Placement="right"
        BodyStyle="display: flex;
    flex-direction: column;
    min-height: 100vh;
    justify-content: flex-start;
    border-radius: 0.6vw;
    background-color: #A2C1DD;"
        HeaderStyle="display: none;">
    <div class="drawer-content">
        <div class="d-logo">
            <img src="Images/School_Logo.png" alt="Logo Escuela"/>
            <h1><b> EEST1</b></h1>
        </div>
        <div>
            <ul class="d-links">
                <li><a href="/inscripcion">Inscripción</a></li>
                <li><a href="#">Contactos</a></li>
                <li><a href="/equipo-de-gestion">Equipo de Gestión</a></li>
                <li><a href="https://www.facebook.com/tecnicachivilcoy/">Noticias</a></li>
                <AuthorizeView>
                    <Authorized>
                        <li><a href="/SGE/index">Gestión Escolar</a></li>
                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
        <div style="margin-top: auto; padding: 20px 0;">
            <Button class="btn-radio-drawer" OnClick="NavigateToRadio">Radio en Vivo</Button>
            <AuthorizeView>
                <NotAuthorized>
                    <Button class="btn-login" OnClick="Login">Iniciar Sesión</Button>
                </NotAuthorized>
                <Authorized>
                    <Button class="btn-login" OnClick="Logout">Cerrar Sesión</Button>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</Drawer>

<style>
    .btn-login {
        border-radius: 0.5vw;
        text-decoration: none;
        background: none;
        color: white;
        border: 2px solid white;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-login:hover {
            background-color: white;
            color: black;
        }

    .btn-radio-drawer {
        border-radius: 0.5vw;
        text-decoration: none;
        background: #FF5733;
        color: white;
        border: 2px solid #FF5733;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: 10px; /* Añadir margen superior */
        margin-bottom: 10px; /* Añadir margen inferior */
    }

    .btn-radio-drawer:hover {
        background-color: white;
        color: #FF5733;
        border: 2px solid #FF5733 !important;
    }
</style>


@code {
    private bool _Visible = false;

    // Manejo de Sesión
    private void Login()
    {
        NavigationManager.NavigateTo("/Auth/Login", true);
    }

    private void Logout()
    {
        NavigationManager.NavigateTo("/Auth/Logout", true);
    }

    private void NavigateToRadio()
    {
        NavigationManager.NavigateTo("https://kick.com/radioinduchivilcoy", true);
    }
}