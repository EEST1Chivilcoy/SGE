@page "/equipo-de-gestion"

<style>
    .card-title {
        font-size: 18px;
        color: #1d3b6c;
        text-align: center;
    }

    .card img {
        border-radius: 50%;
        margin-bottom: 15px;
    }

    .section-title {
        font-size: 24px;
        color: #1d3b6c;
        text-align: center;
        margin: 20px 0;
    }

    @@media (max-width: 768px) {
        .card img {
            width: 70%;
            margin: 0 auto;
        }

        .section-title {
            font-size: 20px;
        }

        .card-title {
            font-size: 16px;
        }
    }

    @@media (max-width: 576px) {
        .card img {
            width: 60%;
        }

        .section-title {
            font-size: 18px;
        }

        .card-title {
            font-size: 14px;
        }
    }
</style>

